{
  "source": ["Token/data/**/*.json"],
  "platforms": {
    "javascript": {
      "transformGroup": "js",
      "buildPath": "Token/build/js/",
      "files": [{
        "destination": "_variable.js",
        "format": "javascript/es6"
      }]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "Token/build/css/",
      "files": [
        {
          "format": "css/variables",
          "destination": "_variable.css"
        }
      ]
    }
  }
}